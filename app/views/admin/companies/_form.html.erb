<% company = local_assigns[:company] %>

<%= form_with model: [:admin, company], local: true do |f| %>
  <%= render "shared/model_errors", model: company %>

  <div class="field">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :tel, class: "label" %>
    <%= f.telephone_field :tel, class: "input", placeholder: "03-1111-1111" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :address, class: "label" %>
    <%= f.text_field :address, class: "input", placeholder: "111-1111 Shibuya, Tokyo" %>
  </div>

  <div class="field">
    <%= f.label :founded_at, class: "label" %>
    <%= f.date_field :founded_at, class: "input" %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit nil, class: "button is-link" %>
    </div>
  </div>
<% end %>
