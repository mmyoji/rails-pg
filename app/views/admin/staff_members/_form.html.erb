<% staff_member = local_assigns[:staff_member] %>
<% company_collection = local_assigns[:company_collection] %>

<%= form_with model: [:admin, staff_member], local: true do |f| %>
  <%= render "shared/model_errors", model: staff_member %>

  <div class="field">
    <%= f.label :company_id, class: "label" %>
    <div class="control">
      <div class="select">
        <%= f.select :company_id, company_collection %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit nil, class: "button is-link" %>
    </div>
  </div>
<% end %>
