<%= form_with scope: :admin_user, url: sessions_url(subdomain: "admin"), local: true do |f| %>
  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Login", class: "button is-link" %>
    </div>
  </div>
<% end %>
