<!DOCTYPE html>
<html>
  <head>
    <title>RailsPg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
      <div class="<%= name %>"><%= msg %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
