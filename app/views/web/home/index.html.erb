<h1 class="title">Home</h1>

<div class="content is-medium">
  <% if current_user %>
    <% if !current_user.confirmed? %>
      <div class="notification is-warning">
        Confirm your email or <%= link_to "resend your confirmation email again?", new_resend_confirmation_email_path %>
      </div>
    <% end %>

    <p>Hello, <strong><%= current_user.username %></strong>!</p>

    <p><%= link_to "Setting", edit_setting_url %></p>

    <%= link_to "Logout", logout_url, method: :delete, data: { confirm: "Are you sure to logout?" }, class: "button is-danger" %>
  <% else %>
      <%= link_to "Login", login_url, class: "button" %>

      <p>or you don't have an account?</p>
      <%= link_to "Sign up", new_user_url, class: "button is-primary" %>
  <% end %>
</div>
